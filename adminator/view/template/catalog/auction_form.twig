{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-product" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-auction" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-data" data-toggle="tab">{{ tab_data }}</a></li>
            <li><a href="#tab-options" data-toggle="tab">{{ tab_options }}</a></li>
            <li><a href="#tab-links" data-toggle="tab">{{ tab_links }}</a></li>
            <li><a href="#tab-image" data-toggle="tab">{{ tab_image }}</a></li>
            <li><a href="#tab-seller" data-toggle="tab">{{ tab_seller }}</a></li>
            <li><a href="#tab-bid-history" data-toggle="tab">{{ tab_bid_history }}</a></li>
            <li><a href="#tab-reviews" data-toggle="tab">{{ tab_reviews }}</a></li>
            <li><a href="#tab-design" data-toggle="tab">{{ tab_design }}</a></li>
            <li><a href="#tab-fees" data-toggle="tab">{{ tab_fees }}</a></li>
          </ul>
          
          <div class="tab-content">
            
            
            <div class="tab-pane active" id="tab-general">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %} 
                <li><a href="#language{{ language['language_id'] }}" data-toggle="tab"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> {{ language['name'] }}</a></li>
                {% endfor %} 
              </ul>
              <div class="tab-content">
                {% for language in languages %} 
                <div class="tab-pane" id="language{{ language['language_id'] }}">
                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-name{{ language['language_id'] }}">{{ entry_name }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="auction_description[{{ language['language_id'] }}][name]" value="{{ auction_description[language['language_id']] is defined ? auction_description[language['language_id']]['name'] : '' }}" placeholder="{{ entry_name }}" id="input-name{{ language['language_id'] }}" class="form-control" />
                      {% if (error_name[language['language_id']] is defined) %} 
                      <div class="text-danger">{{ error_name[language['language_id']] }}</div>
                      {% endif %} 
                    </div>
                  </div>
                  {% if (allow_subtitles) %} 
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-subname{{ language['language_id'] }}">{{ entry_subname }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="auction_description[{{ language['language_id'] }}][subname]" value="{{ auction_description[language['language_id']] is defined ? auction_description[language['language_id']]['subname'] : '' }}" placeholder="{{ entry_subname }}" id="input-subname{{ language['language_id'] }}" class="form-control" />
                      {% if (error_subname[language['language_id']] is defined) %} 
                      <div class="text-danger">{{ error_subname[language['language_id']] }}</div>
                      {% endif %} 
                    </div>
                  </div>
                  {% endif %} 
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-description{{ language['language_id'] }}">{{ entry_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="auction_description[{{ language['language_id'] }}][description]" placeholder="{{ entry_description }}" id="input-description{{ language['language_id'] }}" class="form-control summernote">{{ auction_description[language['language_id']] is defined ? auction_description[language['language_id']]['description'] : '' }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-meta-title{{ language['language_id'] }}">{{ entry_meta_title }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="auction_description[{{ language['language_id'] }}][meta_title]" value="{{ auction_description[language['language_id']] is defined ? auction_description[language['language_id']]['meta_title'] : '' }}" placeholder="{{ entry_meta_title }}" id="input-meta-title{{ language['language_id'] }}" class="form-control" />
                      {% if (error_meta_title[language['language_id']] is defined) %} 
                      <div class="text-danger">{{ error_meta_title[language['language_id']] }}</div>
                      {% endif %} 
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-meta-description{{ language['language_id'] }}">{{ entry_meta_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="auction_description[{{ language['language_id'] }}][meta_description]" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description{{ language['language_id'] }}" class="form-control">{{ auction_description[language['language_id']] is defined ? auction_description[language['language_id']]['meta_description'] : '' }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-meta-keyword{{ language['language_id'] }}">{{ entry_meta_keyword }}</label>
                    <div class="col-sm-10">
                      <textarea name="auction_description[{{ language['language_id'] }}][meta_keyword]" rows="5" placeholder="{{ entry_meta_keyword }}" id="input-meta-keyword{{ language['language_id'] }}" class="form-control">{{ auction_description[language['language_id']] is defined ? auction_description[language['language_id']]['meta_keyword'] : '' }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-tag{{ language['language_id'] }}"><span data-toggle="tooltip" title="{{ help_tag }}">{{ entry_tag }}</span></label>
                    <div class="col-sm-10">
                      <input type="text" name="auction_description[{{ language['language_id'] }}][tag]" value="{{ auction_description[language['language_id']] is defined ? auction_description[language['language_id']]['tag'] : '' }}" placeholder="{{ entry_tag }}" id="input-tag{{ language['language_id'] }}" class="form-control" />
                    </div>
                  </div>
                </div>
                {% endfor %} 
                <input type="hidden" name="date_created" value="{{ date_created }}">
              </div>
            </div>
            
            
            <div class="tab-pane" id="tab-data">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-auction-type">{{ entry_type }}</label>
                <div class="col-sm-2">
                  <select name="auction_type" id="input-auction-type" class="form-control">
                    {% for type in types %} 
                    {% if (type['type'] == auction_type) %} 
                    <option value="{{ type['type'] }}" selected="selected">{{ type['name'] }}</option>
                    {% else %} 
                    <option value="{{ type['type'] }}">{{ type['name'] }}</option>
                    {% endif %} 
                    {% endfor %} 
                  </select>
                </div>
                <label class="col-sm-2 control-label" for="input-auction-status">{{ entry_auction_status }}</label>
                <div class="col-sm-2">
                  <select name="auction_status" id="input-auction-status" class="form-control">
                    {% for status in statuses %} 
                    {% if (status['auction_status_id'] == auction_status) %} 
                    <option value="{{ status['auction_status_id'] }}" selected="selected">{{ status['name'] }}</option>
                    {% else %} 
                    <option value="{{ status['auction_status_id'] }}">{{ status['name'] }}</option>
                    {% endif %} 
                    {% endfor %} 
                  </select>
                </div>
              </div>
              {% if (auction_type == '1') %} 
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-initial-quantity"><span data-toggle="tooltip" title="{{ help_initial_quantity }}">{{ entry_initial_quantity }}</span></label>
                <div class="col-sm-2">
