                        {{ text_default }} 
                        {% else %} 
                        <input type="checkbox" name="auction_store[]" value="0" />
                        {{ text_default }} 
                        {% endif %} 
                      </label>
                    </div>
                    {% for store in stores %} 
                    <div class="checkbox">
                      <label>
                        {% if auction_store in store.store_id %} 
                        <input type="checkbox" name="auction_store[]" value="{{ store['store_id'] }}" checked="checked" />
