{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-bid-increment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>External Payment</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> Generate New External Link Payment</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-event-form" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-eventtitle">Customer Name</label>
            <div class="col-sm-10">
              <input type="text" name="eventtitle" value="" placeholder="Customer Name" id="input-eventtitle" class="form-control" />
              {% if (error_title) %} 
              <div class="text-danger">{{ error_title }}</div>
              {% endif %} 
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-eventemail">Email</label>
            <div class="col-sm-10">
              <input type="text" name="eventemail" value="" placeholder="Email" id="input-eventemail" class="form-control" />
            </div>
          </div>
          
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-eventreference">Reference</label>
            <div class="col-sm-10">
              <input type="text" name="eventreference" value="{{ ref }}" placeholder="Reference" id="input-eventreference" class="form-control" />
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-eventamount">Amount</label>
            <div class="col-sm-10">
              <input type="number" min="1" step="any" name="eventamount" value="" placeholder="AED" id="input-eventamount" class="form-control" />
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-description">Description</label>
            <div class="col-sm-10">
              <textarea name="event_description" placeholder="Description" id="input-description" class="form-control summernote">
                  </textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Payment Gateway</label>
            <div class="col-sm-10">
              <label class="radio-inline">                       <input type="radio" name="gateway" value="1" checked="checked">
                  Telr
                 </label> <label class="radio-inline">                       <input type="radio" name="gateway" value="0">
                  Network International
                 </label>
            </div>
          </div>
          
        </form>
      </div>
    </div>
  </div>
</div>

{{ footer }}